<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--    <style name="AppTheme.ActionBar.Transparent" parent="Theme.HelioApp">-->
    <!--        <item name="android:windowTranslucentStatus">true</item>-->
    <!--    </style>-->
    <style name="AppTheme.ActionBar.Transparent" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="EditTextEmailStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="fontFamily">@font/urbanist_medium</item>
        <item name="placeholderTextColor">@color/grayscale_500</item>
        <item name="placeholderTextAppearance">@font/urbanist_medium</item>
        <item name="android:drawablePadding">@dimen/_12sdp</item>
        <item name="passwordToggleEnabled">true</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/black</item>
        <item name="hintTextColor">@color/grayscale_500</item>
        <item name="hintTextAppearance">@font/urbanist_medium</item>
        <item name="fontFamily">@font/urbanist_medium</item>
        <item name="android:drawablePadding">@dimen/_12sdp</item>
        <item name="android:padding">@dimen/_12sdp</item>
        <item name="android:textSize">@dimen/_10ssp</item>
    </style>

    <style name="ImageButtonStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:paddingStart">@dimen/_25sdp</item>
        <item name="android:paddingEnd">@dimen/_25sdp</item>
        <item name="android:paddingTop">@dimen/_20sdp</item>
        <item name="android:paddingBottom">@dimen/_20sdp</item>
        <item name="android:background">@drawable/button_border</item>
    </style>

</resources>