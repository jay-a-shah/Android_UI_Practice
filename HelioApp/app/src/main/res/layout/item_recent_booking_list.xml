<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.example.helioapp.home_screen.RecentBookingModelClass" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardViewTwo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:clickable="true"
            android:focusable="true"
            android:background="@android:color/transparent"
            app:cardCornerRadius="@dimen/_18sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cardLayoutTwo"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/hotelImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:src="@{viewModel.hotelImage}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textViewTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:fontFamily="@font/urbanist_bold"
                    android:text="@{viewModel.hotelName}"
                    android:textColor="@color/grayscale_900"
                    android:textSize="@dimen/_17ssp"
                    app:layout_constraintStart_toEndOf="@id/hotelImage"
                    app:layout_constraintTop_toTopOf="@id/hotelImage" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textViewSubTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:fontFamily="@font/urbanist_regular"
                    android:text="@{viewModel.place}"
                    android:textColor="@color/grayscale_900"
                    android:textSize="@dimen/_11ssp"
                    app:layout_constraintStart_toStartOf="@id/textViewTitle"
                    app:layout_constraintTop_toBottomOf="@id/textViewTitle" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imageStar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:src="@drawable/ic_star"
                    app:layout_constraintBottom_toBottomOf="@id/hotelImage"
                    app:layout_constraintStart_toStartOf="@id/textViewTitle"
                    app:layout_constraintTop_toBottomOf="@id/textViewSubTitle" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textViewRating"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:fontFamily="@font/urbanist_semibold"
                    android:text="@{viewModel.rating}"
                    android:textColor="@color/primary_500"
                    android:textSize="@dimen/_12ssp"
                    app:layout_constraintBottom_toBottomOf="@id/imageStar"
                    app:layout_constraintStart_toEndOf="@id/imageStar"
                    app:layout_constraintTop_toTopOf="@id/imageStar" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textViewReviews"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:fontFamily="@font/urbanist_regular"
                    android:text="@{viewModel.noOfReviews}"
                    android:textColor="@color/grayscale_600"
                    android:textSize="@dimen/_10ssp"
                    app:layout_constraintBottom_toBottomOf="@id/imageStar"
                    app:layout_constraintStart_toEndOf="@id/textViewRating"
                    app:layout_constraintTop_toTopOf="@id/imageStar" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textViewPrice"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_marginEnd="@dimen/_18sdp"
                    android:fontFamily="@font/urbanist_bold"
                    android:text="@{viewModel.price}"
                    android:textColor="@color/primary_500"
                    android:textSize="@dimen/_18ssp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/hotelImage" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textViewPerNight"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:fontFamily="@font/urbanist_regular"
                    android:text="@string/tv_night"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/grayscale_700"
                    android:textSize="@dimen/_7ssp"
                    app:layout_constraintEnd_toEndOf="@id/textViewPrice"
                    app:layout_constraintStart_toStartOf="@id/textViewPrice"
                    app:layout_constraintTop_toBottomOf="@id/textViewPrice" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/imageBtnBookmark"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:checked="true"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_bookmark"
                    app:layout_constraintBottom_toBottomOf="@id/hotelImage"
                    app:layout_constraintEnd_toEndOf="@id/textViewPrice" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>