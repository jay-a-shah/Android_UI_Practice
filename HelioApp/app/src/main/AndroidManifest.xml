<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.helioapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HelioApp">
        <activity
            android:name=".forgot_password.ForgotPasswordSelectionActivity"
            android:exported="false" />
        <activity
            android:name=".sign_in_screen.SignInWithPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".signup_screen.SignUpActivity"
            android:exported="false" />
        <activity
            android:name=".sign_in_screen.SignInActivity"
            android:exported="false" />
        <activity
            android:name=".onboarding_screen.OnBoardingActivity"
            android:exported="false"
            android:theme="@style/AppTheme.ActionBar.Transparent" />
        <activity
            android:name=".walkthrough_screen.WalkthroughOneActivity"
            android:exported="false"
            android:theme="@style/AppTheme.ActionBar.Transparent" />
        <activity
            android:name=".SplashScreenActivity"
            android:exported="true"
            android:theme="@style/AppTheme.ActionBar.Transparent">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true" />
    </application>

</manifest>