<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.helioapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HelioApp">
        <!--Set custom default icon.-->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/ic_logo" />
        <!-- Set color used with incoming notification messages. -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/primary_500" />

        <activity
            android:name=".BaseActivity"
            android:exported="false" />
        <activity
            android:name=".home_screen.HomeScreenActivity"
            android:exported="true"></activity>
        <activity
            android:name=".forgot_password.CreateNewPasswordActivity"
            android:exported="true"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".forgot_password.ForgotPasswordOTPActivity"
            android:exported="false" />
        <activity
            android:name=".forgot_password.ForgotPasswordSelectionActivity"
            android:exported="false" />
        <activity
            android:name=".sign_in_screen.SignInWithPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".signup_screen.SignUpActivity"
            android:exported="false" />
        <activity
            android:name=".sign_in_screen.SignInActivity"
            android:exported="false" />
        <activity
            android:name=".onboarding_screen.OnBoardingActivity"
            android:exported="false"
            android:theme="@style/AppTheme.ActionBar.Transparent" />
        <activity
            android:name=".walkthrough_screen.WalkthroughOneActivity"
            android:exported="false"
            android:theme="@style/AppTheme.ActionBar.Transparent" />
        <activity
            android:name=".SplashScreenActivity"
            android:exported="true"
            android:theme="@style/AppTheme.ActionBar.Transparent">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true" />

        <service
            android:name=".MyFirebaseMessagingService"
            android:exported="false"
            tools:ignore="Instantiatable">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

    </application>

</manifest>